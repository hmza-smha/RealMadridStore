@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Commerce_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    .boxx {
        box-shadow: 20px 20px 50px 15px #eee;
        z-index: 1;
    }

    .cont {
        margin-top: 50px;
    }
</style>
<body>
    <header>
        <nav class="boxx navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand text-black" asp-area="" asp-controller="Home" asp-action="Index">Real Madrid Store</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="AllProducts">All Products</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a style="position:absolute; right: 250px" asp-controller="Orders" asp-action="ShoppingCart">
                                    <img style="width:40px;" src="~/images/cart.png" />
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="position: absolute; top: 10px; right: 35px " asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="position: absolute; top: 10px; right: 120px ">Hello, @User.Identity.Name</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a style="position:absolute; right: 130px" asp-controller="Orders" asp-action="ShoppingCart">
                                    <img style="width:40px;" src="~/images/cart.png" />
                                </a>
                            </li>
                            <li class="nav-item">
                                <a style="position:absolute; right: 50px" asp-controller="Account" asp-action="Login">
                                    <img style="width:40px;" src="~/images/icons8-user.gif" />
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>   
    <div class="container">
        <main role="main" class="cont pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>
